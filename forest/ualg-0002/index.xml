          <fr:frontmatter>
            <fr:authors>
              <fr:author>
                <fr:link href="/forest/trebor/" title="Trebor" uri="https://trebor-huang.github.io/forest/trebor/" display-uri="trebor" type="local">Trebor</fr:link>
              </fr:author>
            </fr:authors>
            <fr:date>
              <fr:year>2024</fr:year>
              <fr:month>4</fr:month>
              <fr:day>14</fr:day>
            </fr:date>
            <fr:uri>https://trebor-huang.github.io/forest/ualg-0005/</fr:uri>
            <fr:display-uri>ualg-0005</fr:display-uri>
