    <fr:tree show-metadata="false" toc="false"><fr:frontmatter><fr:authors><fr:author><fr:link href="trebor.xml" title="Trebor" addr="trebor" type="local">Trebor</fr:link></fr:author></fr:authors><fr:date><fr:year>2025</fr:year><fr:month>1</fr:month><fr:day>6</fr:day></fr:date><fr:source-path>/Users/trebor/Desktop/blog/forest/trees/algm-0029.tree</fr:source-path><fr:anchor>1849</fr:anchor><fr:addr type="machine">unstable/477</fr:addr><fr:route>unstable-477.xml</fr:route><fr:title text="" /><fr:taxon>Proof</fr:taxon></fr:frontmatter><fr:mainmatter>
