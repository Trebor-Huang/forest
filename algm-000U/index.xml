                <fr:link href="/forest/trebor/" title="Trebor" uri="https://trebor-huang.github.io/forest/trebor/" display-uri="trebor" type="local">Trebor</fr:link>
              </fr:author>
            </fr:authors>
            <fr:date>
              <fr:year>2024</fr:year>
              <fr:month>3</fr:month>
              <fr:day>8</fr:day>
            </fr:date>
            <fr:uri>https://trebor-huang.github.io/forest/algm-000W/</fr:uri>
            <fr:display-uri>algm-000W</fr:display-uri>
